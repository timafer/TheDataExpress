extends layout
block content
    div(id="userPanel")
        if username
            p You are logged in as #{username}!
            a(href="/logout") Logout
        else
            p You are not logged in!
            a(href="/login") Login
            a(href="/accountcreate") Register
    div
        div(id="canvasDiv")
            a Question 1
            canvas(id="myCanvas1")
        div(id="canvasDiv")
            a Question 2
            canvas(id="myCanvas2")
        div(id="canvasDiv")
            a Question 3
            canvas(id="myCanvas3")
    script(src="chartScript.js")
    if admin
        a(href="./adminview" id="gotoAdmin") Admin View